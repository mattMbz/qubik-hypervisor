{
  "extends": "./tsconfig.private.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],                                  
    "module": "ES6",
    "rootDir": "./applications/web/typescript", /* Specify the root folder within your source files. */
    "outDir": "./static/js", /* Specify an output folder for all emitted files. */
    "esModuleInterop": true, /* Emit additional JavaScript to ease support for importing CommonJS */
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "strict": true, /* Enable all strict type-checking options. */
    "skipLibCheck": true, /* Skip type checking all .d.ts files. */
    "moduleResolution": "node",
  },
}